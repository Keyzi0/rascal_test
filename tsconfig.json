{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "src",
        "sourceMap": false,
        "declaration": true,
        "stripInternal": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es6",
        "skipLibCheck": true,
        "downlevelIteration": true,
        "typeRoots": [
            "node_modules/@types",
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ]
}
